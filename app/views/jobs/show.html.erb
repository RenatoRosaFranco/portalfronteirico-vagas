<section id="content">
	<div class="container">
		<div class="row">
			<div class="col-md-12">
				<ul class="list-unstyled"> 
					<% if (@job.active?) then %>
						<li>
							<%= link_to 'Expirar', inactive_job_path(@job), method: :post, 
							class: 'btn btn-primary btn-lg' %>		
						</li>
					<% else %>
						<li>
							<%= link_to 'Ativar', active_job_path(@job), method: :post,
							class: 'btn btn-primary btn-lg' %>	
						</li>
					<% end %>
				</ul>
		    
		    <div class="field">
		    	<h1 class='bold'>
		    		<%= @job.title %>
		    		<small><%= @job.status %></small>	
		    	</h1>
		    </div>

		    <div class="field">
		    	<p><%= @job.description %></p>
		    </div>

		    <div id="appplication">
		    	<% if (@job.how_to_apply.eql?('Email')) then %>
		    		
		    		<button type="button" class="btn btn-primary btn-lg" 
		    			data-toggle="modal" data-target="#jobApplicationModal">
  							Quero me candidatar
						</button>


		    		<div class="modal fade" id="jobApplicationModal" tabindex="-1" 
		    		role="dialog" aria-labelledby="myModalLabel">
						  <div class="modal-dialog" role="document">
						    <div class="modal-content">
						      <div class="modal-header">
						        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
						        <h4 class="modal-title text-center bold" id="myModalLabel">
						        	Candidate-se a vaga de <%= @job.title %>
						        </h4>
						      </div>
						      <div class="modal-body">
						        <%= render 'job_application', job_application: JobApplication.new %>
						      </div>
						      <div class="modal-footer">
						      </div>
						    </div>
						  </div>
						</div>

		    	<% else %>
		    		<%=  link_to @job.apply_content,
		    			class: 'btn btn-primary btn-lg top' do %>
		    				Quero me Candidatar
		    		<% end %>
		    	<% end %>
		    </div>

		    <div class="actions">
		    	<%= link_to 'Editar', edit_job_path(@job) %>
		      <%= link_to 'Voltar', jobs_path %>
		    </div>
			</div>
		</div>
	</div>
</section>