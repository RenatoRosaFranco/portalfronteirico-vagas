<% provide :title, '' %>
<% provide :description, '' %>
<% provide :keywords, '' %>
<% provide :ld_json, {} %>

<section id="presenter" class='jumbotron' style='margin-top: -20px;'>
	<div class="container">
		<div class="row">
			<div class="col-md-12">
				
				<div class="col-md-8 col-md-offset-2">
					<%= form_for(:search) do |f| %>

					<div class='panel panel-default'>
						<div class='panel-body'>
					  	<div class="col-md-5">
					    	<%= f.text_field :keywords, class: 'form-control',
					    	required: 'required', autocomplete: 'off',
					    	placeholder: 'Palavras-chave' %>
					  	</div>

					  	<div class='col-md-5'>
				       	<%= f.text_field :location, class: 'form-control',
				       	required: 'required', autocomplete: 'off',
				       	placeholder: 'Local' %>
				    	</div>
					
					  	<div class="col-md-2 text-center">
						   	<%= f.submit 'Buscar', class: 'btn btn-primary btn-lg' %>
					  	</div>
					  </div>
					<% end %>
				</div>
			</div>
		</div>
	</div>
</section>

<section id="content">
	<div class="container">
		<div class="row">
			<div class="col-md-12">

				<div class='row'>
					<div class='col-md-3'>
						<div class="row">
							<div class="col-md-12">
								<div class="panel panel-default">
									<div class="panel-body">
										<h4 class='bold'>Refinar por Cidade</h4>
									  <ul class='list-unstyled'>
									  	<% City.all.each do |city| %>
									  	<li>
									  		<%= city.name %>
									  		<%= link_to '' do %>
									  			<span class='bold'>(<%= city.jobs.count %>)</span>
									  		<% end %>
									  	</li>
									  	<% end %>
									  </ul>
									</div>
								</div>
							</div>

							<div class="col-md-12">
								<div class='panel panel-default'>
									<div class='panel-body'>
										<h4 class='bold'>Refinar por Áreas de atuação</h4>
									  <ul class='list-unstyled'>
									  	<% OccupationArea.all.each do |area| %>
									  	<li>
									  		<%= area.name %>

									  		<%= link_to '' do %>
									  		<span class='bold'>
									  			(<%= area.jobs.count %>)
									  		</span>
									  		<% end %>
									  	</li>
									  	<% end %>
									  </ul>
									</div>
								</div>
							</div>

							<div class="col-md-12">
								<div class='panel panel-default'>
									<div class='panel-body'>
										<h4 class='bold'>Refinar por tipo de contratação</h4>
										<ul class='list-unstyled'>
											<% HiringType.all.each do |type| %>
											<li>
												<%= type.name %>
												
												<%= link_to '' do %>
												<span class='bold'>
													(<%= type.jobs.count %>)
												</span>
												<% end %>
											</li>
											<% end %>
										</ul>
									</div>
								</div>
							</div>
						</div>
					</div>

					<div class='col-md-9'>

						<% if current_user %>
						<div class='row'>
							<div class='col-md-12'>
								<div class='panel panel-default'>
									<div class='panel-body text-right'>
										<%= link_to 'Adicionar Vaga', 
										new_job_path, class: 'btn btn-primary btn-lg top' %>
									</div>
								</div>
							</div>
						</div>
						<% end %>

<!-- 						<div id="search"><br>
							<%= form_for(:search, { url: search_jobs_path, method: :get }) do |f| %>
								<div class="field">
									<%= f.text_field :q, placeholder: 'Buscar...', class: 'form-control' %>
								</div>
							<% end %>
						</div>
						<br> -->
				  
					  <div id='jobs'>
					  	<% for i in 1..7 %>
						  	<% @jobs.each do |job| %>
						  		<%= render job %>
						  	<% end %>
					  	<% end %>
						</div>

						<div id='pagination'>
							<div class='text-center'>
								<%= paginate(@jobs) %>
							</div>
						</div>

					  <div class='row'>
					  	<div class="col-md-12">
					  		<% if current_user %>
					  			<%= link_to 'Editar Perfil', edit_profile_path(current_user.profile), class: 'btn 	btn-primary btn-lg' %>
					  		<% end %>
					  	</div>
					  </div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>