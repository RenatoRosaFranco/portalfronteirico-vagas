<footer id="footer">
	<div class="container">
		<div class="row">
			<div class="col-md-12">
				
				<div class="col-md-3">
					<h4 class="bold">Sitemap</h4>
					<ul class="list-unstyled">
						<li><%= link_to 'Home', root_path %></li>
						<li><%= link_to 'Contato', root_path %></li>
						<li><%= link_to 'Sobre Nós', root_path %></li>
						<li><%= link_to 'Termos de Uso', root_path %></li>
					</ul>
				</div>

				<div class="col-md-3">
					<h4 class='bold'>Empresas</h4>
					<ul class="list-unstyled">
						<li><%= link_to 'Publicar Vagas', new_job_path %></li>
						<li><%= link_to 'Entrar', new_user_session_path %></li>
					</ul>
					<br>

					<h4 class='bold'>Redes Sociais</h4>
					<ul class="list-unstyled list-inline">
						<li>
							<%= link_to '',
								target: '_blank' do %>
								<i class="fab fa-facebook-square"></i>
							<% end %>
						</li>
						<li>
							<%= link_to '',
								target: '_blank' do %>
								<i class="fab fa-instagram"></i>
							<% end %>
						</li>
						<li>
							<%= link_to '',
								target: '_blank' do %>
								<i class="fab fa-twitter"></i>
							<% end %>
						</li>
							<%= link_to '',
								target: '_blank' do %>
								<i class="fab fa-linkedin"></i>
							<% end %>
						</li>
					</ul>
				</div>

				<div class="col-md-3">
					<h4 class='bold'>Candidatos</h4>
					<ul class="list-unstyled">
						<li><%= link_to 'Buscar Vagas', jobs_path %></li>
					</ul>
					<br>

					<h4 class='bold'>Curta no Facebook</h4>
					<div id='facebook-iframe'>
						<div class="fb-page" data-href="https://www.facebook.com/portalfronteirico/" data-tabs="timeline" data-width="150" data-height="120" data-small-header="false" data-adapt-container-width="false" data-hide-cover="false" data-show-facepile="true"><blockquote cite="https://www.facebook.com/portalfronteirico/" class="fb-xfbml-parse-ignore"><a href="https://www.facebook.com/portalfronteirico/">Portal Fronteiriço</a></blockquote></div>
					</div>
				</div>

				<div class="col-md-3">
					<h4 class='bold'>Procurando Estágio/Estágiarios?</h4>
					<ul class="list-unstyled">
						<li><%= link_to 'Buscar Vagas', jobs_path %></li>
					</ul>
				</div>
			</div>
		</div>
	</div>

	<div id='copyright'>
		<div class="container">
			<div class="row">
				<div class="col-md-6">
					<h5>Portal Fronteiriço - &copy <%= Date.today.year %></h5>
					<ul class="list-unstyled list-inline">
						<li><%= link_to 'Termos de Privacidade', '' %></li>
						<li><%= link_to 'Noticias', 'https://portalfronteirico.com' %></li>
					</ul>
				</div>

				<div class="col-md-6 text-right">
					<h5 class='bold'>Proudly hosted by Heroku</h5>
					<p>Todos os direitos reservados.</p>
				</div>
			</div>
		</div>
	</div>
</footer>