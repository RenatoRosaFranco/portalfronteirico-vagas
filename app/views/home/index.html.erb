<% provide :title, '' %>
<% provide :description, '' %>
<% provide :keywords, '' %>
<% provide :ld_json, {} %>

<section id="presenter" class='jumbotron' style='margin-top: -20px;'>
	<div class="container">
		<div class="row">
			<div class="col-md-12">

				<div class='col-md-12'>
					<h1 class='text-center bold' style='text-transform: uppercase; font-size: 40px;'>
						Temos <%= rand(1_000..2_000)%> Vaga(s) em Aberto</h1>
					<p class="text-center">Encontre sua vaga de trabalho de maneira bem simples.</p>
					<br>
				</div>

				<div class="col-md-8 col-md-offset-2" style='margin-top: 30px;'>
					<%= form_for(:search) do |f| %>

					<div class='panel panel-default'>
						<div class='panel-body'>
					  	<div class="col-md-5">
					    	<%= f.text_field :keywords, class: 'form-control',
					    	required: 'required', autocomplete: 'off',
					    	placeholder: 'Palavras-chave' %>
					  	</div>

					  	<div class='col-md-5'>
				       	<%= f.text_field :location, class: 'form-control',
				       	required: 'required', autocomplete: 'off',
				       	placeholder: 'Local' %>
				    	</div>

					  	<div class="col-md-2 text-center">
						   	<%= f.submit 'Buscar', class: 'btn btn-primary btn-lg' %>
					  	</div>
					  </div>
					<% end %>
				</div>
			</div>
		</div>
	</div>
</section>

<section id="content">
	<div class="container">
		<div class="row">
			<div class="col-md-12">

			</div>
		</div>
	</div>
</section>

<section id='featured'>
	<div class="container">
		<div class="row">
			<div class="col-md-12">
				<h2 class='bold uppercase text-center'>Empresas em destaque</h2>
				<hr>

				<% User.all.each do |user| %>
					<% for i in (1..3) do %>
					 <div class="col-md-4">
					 	<div class="panel panel-default">
					 		<div class="panel-heading">
					 			<div class="jumbotron"></div>
					 		</div>
					 		<div class="panel-body">
					 			<ul class="list-unstyled list-inline">
					 				<li class='pull-left'>
					 					<p>Portal Fronteiriço</p>
					 				</li>
					 				<li class='pull-right'>
					 					<p><%= rand(0..30) %> Vaga(s)</p>
					 				</li>
					 			</ul>
					 		</div>
					 	</div>
					 </div>
					 <% end %>
				<% end %>

			</div>
		</div>
	</div>
</section>

<section id="post-job">
	<div class="container">
		<div class="row">
			<div class="col-md-12 text-center">
        <h1 class='bold uppercase'>Publique as vagas de sua empresa</h1>
        <p>Os profissionais poderão se candidatar imediatamente.</p>

        <%= link_to new_job_path,
          class: 'btn btn-primary btn-lg top' do %>
          Publicar Vaga
        <% end %>
			</div>
		</div>
	</div>
</section>

<section id='last-jobs'>
	<div class="container">
		<div class="row">
			<div class="col-md-12">
				<h3 class='bold uppercase text-center'>Últimas vagas publicadas</h3>
				<hr>

				<div class="col-md-9 col-md-offset-2">
					<% Job.all.limit(4).each do |job| %>
						<%= render job %>
					<% end %>
				</div>

				<div class="col-md-12">
					<div class='text-center'>
	          <%= link_to jobs_path,
	            class: 'btn btn-primary btn-lg top' do %>
	            	Visualizar todas as vagas
	           <% end %>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>

<section id="newsletter-block">
	<div class="container">
		<div class="row">
			<div class="col-md-12">
				<div class="col-md-6">
					<h3 class='bold uppercase'>Receba Alertas de Vagas </h3>
					<p class='alert alert-success'>
						Receba alertas de vagas diretamente em seu email.
					</p>

					<p>Você poderá se descadastrar a qualquer momento.</p>
				</div>

				<div class="col-md-6">
					<div class="panel panel-default">
						<div class="panel-body">
							<%= form_for(:newsletter) do |f| %>
								<%= has_errors?(nil) %>

								<div class="field padding">
									<%= f.email_field :email, class: 'form-control',
									required: 'required', placeholder: 'Diigte o e-mail',
									autocomplete: 'off' %>
								</div>

								<div class="field padding">
									<%= f.select(:plan, {
										'Diário' => 0,
										'Semanal' => 1,
										'Mensal' => 2
									},
									{ prompt: 'Selecionar Plano' },
									{ class: 'form-control', required: 'required' }) %>
								</div>

								<div class="actions padding">
									<%= f.submit 'Inscreva-me', class: 'btn btn-primary btn-lg top' %>
								</div>
							<% end %>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>

<section id="partners">
	<div class="container">
		<div class="row">
			<div class="col-md-12">
				<h3 class='bold uppercase text-center'>Parceiros</h3>
        <hr>

        <div class="col-md-3">
          <%= image_tag('absstartups.png', class: 'partners-logo') %>
        </div>
        <div class="col-md-3">
          <%= image_tag('agsstartups.png', class: 'partners-logo') %>
        </div>
        <div class="col-md-3">
          <%= image_tag('aws.png', class: 'partners-logo') %>
        </div>
        <div class="col-md-3">
          <%= image_tag('cloudinary.png', class: 'partners-logo') %>
        </div>
			</div>
		</div>
	</div>
</section>
